<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Your Contacts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>

    <%- include('navbar',{contactName:"My Contact",searchField:"Whatever"}); %>

    <div class="card" style="width: 18rem;">
      <div class="card-header">
        Featured
      </div>
      <ul class="list-group list-group-flush">
        <% contacts.forEach(function(contact) { %>
          <li class="list-group-item">
            <div class="d-flex align-items-center">
              <div class="rounded-circle bg-primary text-light mr-2" style="width: 30px; height: 30px; display: flex; justify-content: center; align-items: center;">
                <%= contact.contactName.charAt(0).toUpperCase() %> <!-- Display the first letter of the contact's name dynamically -->
              </div>
              <div>
                <div><%= contact.contactName %></div> <!-- Display the actual contact name dynamically -->
                <div><%= contact.contactNumber %></div> <!-- Display the actual contact number dynamically -->
              </div>
            </div>
          </li>
        <% }); %>
      </ul>
    </div>
    
    
      

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>